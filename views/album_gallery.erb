<!doctype html>
<html>
<head>
  <meta charset="UTF-8">
  <link rel="stylesheet" type="text/css" href="/css/style.css" media="screen" />
</head>

<body>

<div class="header">

</div>

<div class="nav">
  <ul>
    <li><a href=<%= url('/login') %>>Login</a></li>
    <li><a href=<%= url('/gallery') %>>Gallery</a></li>
    <li><a href=<%= url('/photosets') %>>Album</a></li>
  </ul>
</div>

<div class="content">
 
  <% @photosetPhotos.photo.each do |i|   
        
       photoid = i['id']
       serverid = i['server']
       farmid = i['farm']
       secret = i['secret']  	 
       @picurl = "http://farm#{farmid}.staticflickr.com/#{serverid}/#{photoid}_#{secret}_m.jpg"
       @photohref="/photo/#{photoid}"
       @photohrefremove="/remove/#{@photosetPhotos['id']}/#{photoid}"
  %>
     <a href=<%= url(@photohref) %>><img src="<%= @picurl %>"></a> <a style="color: red;" href=<%= url(@photohrefremove) %>>remove</a>
  <% end %>

</div>


</body>

</html




